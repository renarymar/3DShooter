using GeekBrains.Helpers;
using UnityEngine;

namespace Geekbrains
{
	public abstract class Weapon : BaseObjectScene
	{
		public Transform _barrel;
		public float _force = 9999;
		public float _rechargeTime = 0.5f;
		public Ammunition Ammunition;

		protected Timer  _timer = new Timer(); // переделать просчет задержкак между выстрелами
		protected bool _isFire = true;
		public abstract void Fire();

		protected virtual void Update()
		{
			_timer.Update();
			if (_timer.IsEvent())
			{
				_isFire = true;
			}
		}
	}
}